<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="content" method="upgrade">
	<name>Content - GeoContent</name>
	<author>Alessandro Pasotti (ItOpen)</author>
	<creationDate>2012-06-05</creationDate>
	<copyright>Copyright (C) 2011 ItOpen. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@itopen.it</authorEmail>
	<authorUrl>www.itopen.it</authorUrl>
	<version>17_27</version>
    <description>GEOCONTENT_CONTENT_PLUGIN_DESC</description>
<!--  TODO: help link    -->
	<files>
		<filename plugin="geocontent">geocontent.php</filename>
        <folder>language</folder>
	</files>

    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_content_geocontent.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_content_geocontent.sys.ini</language>
    </languages>


    <config>

    <fields name="params">

        <fieldset name="basic">

        <field type="list" name="automatic_map" label="GEOCONTENT_PLUGIN_AUTOMATIC_MAP" description="GEOCONTENT_PLUGIN_AUTOMATIC_MAP_DESC" default="yes">
            <option value="yes">JYES</option>
			<option value="no">JNO</option>
		</field>
        <field type="list" name="automatic_zoom" label="GEOCONTENT_PLUGIN_AUTOMATIC_ZOOM" description="GEOCONTENT_PLUGIN_AUTOMATIC_ZOOM_DESC" default="yes">
            <option value="yes">JYES</option>
			<option value="no">JNO</option>
    </field>
    <field type="list" name="automatic_center" label="GEOCONTENT_PLUGIN_AUTOMATIC_CENTER" description="GEOCONTENT_PLUGIN_AUTOMATIC_CENTER_DESC" default="yes">
        <option value="yes">JYES</option>
			<option value="no">JNO</option>
  </field>
  <field type="list" name="highlight_items" label="GEOCONTENT_PLUGIN_HIGHLIGHT_ITEMS" description="GEOCONTENT_PLUGIN_HIGHLIGHT_ITEMS_DESC" default="yes">
      <option value="yes">JYES</option>
      <option value="no">JNO</option>
  </field>
  <field name="show_mouse_position" label="GEOCONTENT_PLUGIN_SHOW_MOUSE_POSITION" description="GEOCONTENT_PLUGIN_SHOW_MOUSE_POSITION_DESC" type="list" default="0">
      <option value="1">JYES</option>
      <option value="0">JNO</option>
  </field>


  <field type="list" name="frontpage_enabled" label="GEOCONTENT_PLUGIN_FRONT_PAGE" description="GEOCONTENT_PLUGIN_FRONT_PAGE_DESC" default="no">
            <option value="yes">Yes</option>
            <option value="no">No</option>
        </field>

        <field type="list" name="map_type" label="GEOCONTENT_PLUGIN_MAP_TYPE" description="GEOCONTENT_PLUGIN_MAP_TYPE_DESC" default="olwidgetmap">
            <option value="olwidgetmap">OpenLayers (OlWidget)</option>
            <option value="gmap">Google Map</option>
            <option value="olmap">OpenLayers</option>
        </field>
        <field type="list" name="display_position" label="GEOCONTENT_PLUGIN_POSITION_FOR_AUTOMATIC_MAPS" description="GEOCONTENT_PLUGIN_POSITION_FOR_AUTOMATIC_MAPS" default="after_content">
			<option value="after_content">After content</option>
			<option value="before_content">Before content</option>
  </field>
  <field name="map_minzoom" type="list" default="4" label="GEOCONTENT_PLUGIN_SINGLE_POINT_ZOOM" description="GEOCONTENT_PLUGIN_SINGLE_POINT_ZOOM_DESC">
          <option value="0">Zoom level 0</option>
          <option value="1">Zoom level 1</option>
          <option value="2">Zoom level 2</option>
          <option value="3">Zoom level 3</option>
          <option value="4">Zoom level 4</option>
          <option value="5">Zoom level 5</option>
          <option value="6">Zoom level 6</option>
          <option value="7">Zoom level 7</option>
          <option value="8">Zoom level 8</option>
          <option value="9">Zoom level 9</option>
          <option value="10">Zoom level 10</option>
          <option value="11">Zoom level 11</option>
          <option value="12">Zoom level 12</option>
          <option value="13">Zoom level 13</option>
          <option value="14">Zoom level 14</option>
          <option value="15">Zoom level 15</option>
          <option value="16">Zoom level 16</option>
          <option value="17">Zoom level 17</option>
          <option value="18">Zoom level 18</option>
          <option value="19">Zoom level 19</option>
          <option value="20">Zoom level 20</option>
        </field>

        <field name="button_text" type="text" default="Map editor" label="GEOCONTENT_PLUGIN_EDITOR_BUTTON_TEXT" description="GEOCONTENT_PLUGIN_EDITOR_BUTTON_TEXT_DESC">
        </field>

        <field type="list" name="redirect_after_save" label="GEOCONTENT_PLUGIN_REDIRECT" description="GEOCONTENT_PLUGIN_REDIRECT_DESC" default="no">
            <option value="yes">Yes</option>
            <option value="no">No</option>
        </field>


    </fieldset>
      </fields>
  </config>
</extension>