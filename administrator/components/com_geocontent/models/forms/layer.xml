<?xml version="1.0" encoding="utf-8"?>
<form  addrulepath="/administrator/components/com_geocontent/models/rules">
    <fieldset>
        <field name="asset_id" type="hidden" filter="unset" />
        <field name="id"
               type="text"
               default="0"
               readonly="true"
               class="readonly"
              />

        <field
              name="name"
              type="text"
              label="COM_GEOCONTENT_FIELD_LAYER_NAME"
              description="COM_GEOCONTENT_FIELD_LAYER_NAME_DESC"
              size="40"
              class="inputbox"
              default=""
              required="true"
              />
        <field name="published"
               type="list"
               description="COM_GEOCONTENT_FIELD_STATE_DESC"
               class="inputbox"
               size="1"
               default="1"
               label="JSTATUS"
               >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>

        <field name="created_by" type="user"
               label="COM_GEOCONTENT_FIELD_CREATED_BY_LABEL"
               description="COM_GEOCONTENT_FIELD_CREATED_BY_DESC"
               />

        <field
              name="access"
              type="accesslevel"
              label="JFIELD_ACCESS_LABEL"
              description="JFIELD_ACCESS_DESC"
              class="inputbox"/>

        <field
              id="rules"
              name="rules"
              type="rules"
              label="JFIELD_RULES_LABEL"
              translate_label="false"
              filter="rules"
              validate="rules"
              class="inputbox"
              component="com_geocontent"
              section="layer"/>

        <fields name="params">
            <fieldset name="style">
                <field
                      name="icon"
                      type="iconlist"
                      label="Icon"
                      description="COM_GEOCONTENT_ICON_FOR_POINTS"
                      size="1"
                      class="inputbox"
                      default=""
                      required="true"
                      >
                    <option value="">--</option>
                </field>
                <field
                      name="iconsize"
                      type="list"
                      label="Icon size"
                      description="COM_GEOCONTENT_ICON_SIZE__KML_ONLY__NO_EFFECT_ON_BROWSER_MAP_"
                      class="inputbox"
                      default="32"
                      required="true"
                      >
                    <option value="8">8</option>
                    <option value="16">16</option>
                    <option value="24">24</option>
                    <option value="32">32</option>
                    <option value="48">48</option>
                    <option value="64">64</option>
                </field>
                <field
                      name="cluster"
                      type="list"
                      label="COM_GEOCONTENT_CLUSTER_LABEL"
                      description="COM_GEOCONTENT_CLUSTER_DESC"
                      class="inputbox"
                      default="0"
                      required="true"
                      >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                      name="linergba"
                      type="inputbox"
                      label="COM_GEOCONTENT_LINE_COLOR"
                      description="COM_GEOCONTENT_LINE_COLOR_DESC"
                      size="8"
                      class="inputbox"
                      default="00FF00FF"
                      required="true"
                      />
                <field
                      name="linewidth"
                      type="integer"
                      first="1"
                      last="20"
                      step="1"
                      label="COM_GEOCONTENT_LINE_WIDTH"
                      description=""
                      class="inputbox"
                      default="2"
                      required="true"
                      />
                <field
                      name="polyrgba"
                      type="inputbox"
                      label="COM_GEOCONTENT_POLYGON_COLOR"
                      description="COM_GEOCONTENT_POLYGON_COLOR_DESC"
                      size="8"
                      class="inputbox"
                      default="FFFF00FF"
                      required="true"
                      />

                <!-- select intent -->
                <field
                      name="select_linergba"
                      type="inputbox"
                      label="COM_GEOCONTENT_LINE_COLOR"
                      description="COM_GEOCONTENT_LINE_COLOR_DESC"
                      size="8"
                      class="inputbox"
                      default="000000FF"
                      required="true"
                      />
                <field
                      name="select_linewidth"
                      type="integer"
                      first="1"
                      last="20"
                      step="1"
                      label="COM_GEOCONTENT_LINE_WIDTH"
                      description=""
                      class="inputbox"
                      default="4"
                      required="true"
                      />
                <field
                      name="select_polyrgba"
                      type="inputbox"
                      label="COM_GEOCONTENT_POLYGON_COLOR"
                      description="COM_GEOCONTENT_POLYGON_COLOR_DESC"
                      size="8"
                      class="inputbox"
                      default="FF0000FF"
                      required="true"
                      />


                <field
                      name="show_labels"
                      type="list"
                      label="COM_GEOCONTENT_SHOW_LABELS_LABEL"
                      description="COM_GEOCONTENT_SHOW_LABELS_DESC"
                      class="inputbox"
                      default="0"
                      required="true"
                      >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

            </fieldset>
            <fieldset
                     name="labels">
                <field
                      name="label_font_family"
                      type="inputbox"
                      label="COM_GEOCONTENT_LABEL_FONT_LABEL"
                      description="COM_GEOCONTENT_LABEL_FONT_DESC"
                      class="inputbox"
                      default="sans-serif"
                      required="false"
                      />
                <field
                      name="label_font_size"
                      type="inputbox"
                      label="COM_GEOCONTENT_LABEL_FONT_SIZE_LABEL"
                      description="COM_GEOCONTENT_LABEL_FONT_SIZE_DESC"
                      class="inputbox"
                      default="10px"
                      required="false"
                      />
                <field
                      name="label_font_weight"
                      type="list"
                      label="COM_GEOCONTENT_LABEL_FONT_WEIGHT_LABEL"
                      description="COM_GEOCONTENT_LABEL_WEIGHT_FONT_DESC"
                      class="inputbox"
                      default="normal"
                      required="false">

                      <option value="normal">normal</option>
                      <option value="bold">bold</option>
                      <option value="bolder">bolder</option>
                      <option value="lighter">lighter</option>

                </field>
                <field
                      name="label_font_color"
                      type="inputbox"
                      label="COM_GEOCONTENT_LABEL_COLOR_LABEL"
                      description="COM_GEOCONTENT_LABEL_COLOR_DESC"
                      size="7"
                      class="inputbox"
                      default="000000"
                      required="false"
                      />
                <field
                      name="label_align"
                      type="list"
                      label="COM_GEOCONTENT_LABELS_ALIGN_LABEL"
                      description="COM_GEOCONTENT_LABELS_ALIGN_DESC"
                      class="inputbox"
                      default="lm"
                      required="false">
                    <option value="cm">center-middle</option>
                    <option value="ct">center-top</option>
                    <option value="cb">center-bottom</option>
                    <option value="lm">left-middle</option>
                    <option value="lt">left-top</option>
                    <option value="lb">left-bottom</option>
                    <option value="rm">right-middle</option>
                    <option value="rt">right-top</option>
                    <option value="rb">right-bottom</option>
                </field>
                <field
                      name="label_select"
                      type="list"
                      label="COM_GEOCONTENT_LABEL_SELECT"
                      description="COM_GEOCONTENT_LABEL_SELECT_DESC"
                      class="inputbox"
                      default="1"
                      required="false"
                      >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
                <field
                      name="label_xoffset"
                      type="inputbox"
                      label="COM_GEOCONTENT_LABEL_XOFFSET"
                      description="COM_GEOCONTENT_LABEL_XOFFSET_DESC"
                      class="inputbox"
                      default="0"
                      required="false"
                      >
                </field>
                <field
                      name="label_yoffset"
                      type="inputbox"
                      label="COM_GEOCONTENT_LABEL_YOFFSET"
                      description="COM_GEOCONTENT_LABEL_YOFFSET_DESC"
                      class="inputbox"
                      default="0"
                      required="false"
                      >
                </field>
                <field
                      name="label_font_opacity"
                      type="integer"
                      first="0"
                      last="100"
                      step="1"
                      label="COM_GEOCONTENT_LABEL_FONTOPACITY"
                      description="COM_GEOCONTENT_LABEL_FONTOPACITY_DESC"
                      class="inputbox"
                      default="100"
                      required="false"
                      >
                </field>
            </fieldset>
        </fields>


    </fieldset>
</form>
