<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" client="site">
	<name>Norman Creek Catchment Coordinating Committee (N4C)</name>
	<creationDate>9 October 2012</creationDate>
	<author>Dan Gilmore</author>
	<authorEmail>dan@2inchesofwater.com</authorEmail>
	<authorUrl>http://2inchesofwater.com</authorUrl>
	<copyright>Copyright (C) 2012 Open Source Matters, Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>0.3.1</version>
	<description>Bespoke template for the Norman Creek Catchment Coordinating Committee, featuring a very large Google Map interface to reinforce the intensely local nature of the group's work.</description>

	<files>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>lib</folder>
		<folder>fonts</folder>
		<folder>language</folder>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>favicon.ico</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
	</files>

	<positions>
		<position>nav</position>
		<position>breadcrumbs</position>
		<position>comments</position>
		<position>related</position>
		<position>artwork</position>
		<position>map</position>
		<position>extra</position>
		<position>promo</position>
		<position>login</position>
		<position>search</position>
		<position>social</position>
		<position>contact</position>
		<position>message</position>
		<position>sponsors</position>
		<position>analytics</position>
		<position>script</position>
		<position>system</position>
		<position>debug</position>
	</positions>

	<!-- 	For core templates, we also install/uninstall the language files in the core language folders.
	-->
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_n4c.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_n4c.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="logo" type="media"
					   label="Logo URL" description="Select an image for the site's logo" />

				<field name="sitetitle"  type="text" default=""
					label="Site title"
					description="The site's title - appears in the browser's titlebar and in bookmarks"
					filter="string" />

				<field name="theme" type="list" default="center"
					label="Site appearance"
					description="Select a variant appearance for the site"
					filter="word">
					<option value="default">Default</option>
					<option value="alternate">Alternate</option>
				</field>


				<field name="sitedescription"  type="text" default=""
					label="Site description"
					description="A description of the site"
					filter="string" />
					
				<field name="logoreadmore"  type="text" default=""
					label="Read more URL"
					description="URL pointing to the site's Read More page, appears as part of the Site Description"
					filter="string" />
			</fieldset>
		</fields>
	</config>
</extension>
