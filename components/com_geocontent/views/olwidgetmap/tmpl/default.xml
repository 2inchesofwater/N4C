<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="COM_GEOCONTENT_OLWIDGETMAP_VIEW_DEFAULT_TITLE">
        <message>COM_GEOCONTENT_OLWIDGETMAP_VIEW_DEFAULT_TITLE_DESC</message>
    </layout>

    <!-- Add fields to the parameters object for the layout. -->
    <fields name="params">
        <fieldset name="basic" label="COM_GEOCONTENT_CONFIG_GENERAL_TAB">
            <field name="map_latstart" type="text" default="" label="Map lat center" description="Insert here the latitude for the map window start">
            </field>
            <field name="map_lngstart" type="text" default="" label="Map lon center" description="Insert here the longiture for the map window start">
            </field>
            <field name="map_zoomstart" type="list" default="13" label="Map zoom level" description="Insert here the initial zoom level for the map window start">
                <option value="0">Zoom level 0</option>
                <option value="1">Zoom level 1</option>
                <option value="2">Zoom level 2</option>
                <option value="3">Zoom level 3</option>
                <option value="4">Zoom level 4</option>
                <option value="5">Zoom level 5</option>
                <option value="6">Zoom level 6</option>
                <option value="7">Zoom level 7</option>
                <option value="8">Zoom level 8</option>
                <option value="0">Zoom level 9</option>
                <option value="10">Zoom level 10</option>
                <option value="11">Zoom level 11</option>
                <option value="12">Zoom level 12</option>
                <option value="13">Zoom level 13</option>
                <option value="14">Zoom level 14</option>
                <option value="15">Zoom level 15</option>
                <option value="16">Zoom level 16</option>
                <option value="17">Zoom level 17</option>
                <option value="18">Zoom level 18</option>
                <option value="19">Zoom level 19</option>
                <option value="20">Zoom level 20</option>
            </field>

        </fieldset>
        <fieldset
                 name="fe_appearance"
                 label="COM_GEOCONTENT_CONFIG_FRONT_END_TAB"
                 description="COM_GEOCONTENT_CONFIG_FRONT_END_TAB_DESC" >

            <field name="map_width" default="100" label="Map width (%)" description="The width of the map wrapper DIV in percent" type="text"/>
            <field name="map_height" default="400" label="Map height (px)" description="The height of the map  wrapper DIV in pixels" type="text"/>
            <field name="toc_style" label="TOC style" description="Style of the Table of Content" type="list" default="list">
                <option value="none">JNOne</option>
                <option value="list">List</option>
                <option value="select">Select</option>
            </field>
            <field name="toc_position" label="TOC position" description="TOC position in respect to the map window within the map wrapper DIV" type="list" default="top">
                <option value="top">Top</option>
                <option value="bottom">Bottom</option>
                <option value="left">Left</option>
                <option value="right">Right</option>
            </field>
            <field name="toc_width" label="TOC width (%)" description="The width of the TOC frame when it is positioned at the left or at the right of the map frame" type="text" default="20" />
            <field name="start_with_layers" label="Active layers at start" type="list" default="JNOne" description="Define here which layer should be switched on at startup, choose 'Selected' and pick one from the list below if you want to start with a particular layer">
                <option value="none">none</option>
                <option value="all">All</option>
                <option value="one">Selected</option>
            </field>
            <field name="active_layer" type="sql" query="SELECT id as value, concat('[' , id , '] ', name) AS active_layer FROM #__geocontent_layer" label="Selected active layer" description="Select here the layer that should be switched on at startup if you choose 'Select' from the list above"></field>

            <field name="layer_filter_list" type="text" label="Layer ID(s)" description="Optionally, enter here a comma separated value list of the layer ID(s) you want to be shown in the map">
            </field>

            <field name="toc_kml" label="KML icon for layers" description="Show a link to the KML file for the layers close to the layer control switch in the TOC" type="radio" default="1">
                <option value="1">Show</option>
                <option value="0">Hide</option>
            </field>

            <field name="replace_target" label="Open balloon links in the same window" description="Replace target = _blank in the map balloon links, so that they are opened in the same window" type="radio" default="0">
                <option value="1">JYES</option>
                <option value="0">JNO</option>
            </field>


            <field name="readmore" type="text" label="Read more text for balloons hyperlinks" description="Enter the text for the read more hyperlink in balloons" default="Read full article">
            </field>

        </fieldset>        <fieldset
                                    name="olmap"
                                    label="COM_GEOCONTENT_CONFIG_LAYERS_TAB"
                                    description="COM_GEOCONTENT_CONFIG_LAYERS_TAB_DESC" >


            <field name="base_layers" type="checkboxes" default="" label="COM_GEOCONTENT_CONFIG_BASE_LAYERS" description="COM_GEOCONTENT_CONFIG_BASE_LAYERS_DESC">
                <option value="osm.mapnik">OpenStreetMap mapnik (OL only)</option>
                <option value="osm.osmarender">OpenStreetMap osmarender (OL only)</option>
                <option value="google.streets">Google streets</option>
                <option value="google.physical">Google physical</option>
                <option value="google.satellite">Google satellite</option>
                <option value="google.hybrid">Google hybrid</option>
                <option value="ve.road">Bing road (OL only)</option>
                <option value="ve.shaded">Bing shaded (OL only)</option>
                <option value="ve.aerial">Bing aerial (OL only)</option>
                <option value="ve.hybrid">Bing hybrid (OL only)</option>
            </field>
            <field name="default_base_layer" type="list" default="osm.mapnik" label="COM_GEOCONTENT_CONFIG_DEFAULT_BASE_LAYER" description="COM_GEOCONTENT_CONFIG_DEFAULT_BASE_LAYER_DESC">
                <option value="osm.mapnik">OpenStreetMap mapnik (OL only)</option>
                <option value="osm.osmarender">OpenStreetMap osmarender (OL only)</option>
                <option value="google.streets">Google streets</option>
                <option value="google.physical">Google physical</option>
                <option value="google.satellite">Google satellite</option>
                <option value="google.hybrid">Google hybrid</option>
                <!-- cannot be default because: mapInstance.GetCurrentMode() is null -->
                <option value="ve.road">Bing road</option>
                <option value="ve.shaded">Bing shaded</option>
                <option value="ve.aerial">Bing aerial</option>
                <option value="ve.aerial">Bing hybrid</option>
        </field>


    </fieldset>

    </fields>


</metadata>